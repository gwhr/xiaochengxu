/* pages/playsList/index.wxss */
page{
  background: #ffffff;
}
.container{
  width: 100%;
  overflow: hidden;
}
.search_box{
  width: 100%;
  height: 136rpx;
  display: flex;
  display: -webkit-flex;
  padding: 0 25rpx;
  align-items: center;
  justify-content: space-between;
}
.search_box .icon{
  width: 18rpx;
  height: 36rpx;
}
.search_box .icon_2{
  width: 36rpx;
  height: 36rpx;
}
.search_box .icon_2 image{
  width: 100%;
  height: 100%;
}
.search_box .search_inp{
  height: 72rpx;
  flex: 1;
  margin: 0 20rpx;
  background: #f1f1f1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-radius: 36rpx;
}
.search_box .search_inp .search_icon{
  width: 34rpx;
  height: 34rpx;
}
.search_box .search_inp .search_icon image{
  width: 100%;
  height: 100%
}
.search_box .search_inp input{
  width: 100%;
  padding-left: 15rpx;
}

.nav-list{
  width: 100%;
  display: flex;
  height: 58rpx;
  justify-content: space-between;
  padding: 0 25rpx;
}
.nav-list .nav-item{
  display: inline-block;
  width: 128rpx;
  height: 58rpx;
  font-size: 30rpx;
  color: #888888;
  font-weight: 600;
  text-align: center;
  line-height: 58rpx;
}
.nav-list .nav-item.active{
  color: #ffffff;
  background: #8a42f5;
  border-radius: 58rpx;
}

.plays-list{
  display: flex;
  width: 100%;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 34rpx 30rpx 0;
}
.plays-list .plays-list-item{
  width: 330rpx;
  height: 490rpx;
}
.plays-list .plays-list-item .plays-cover{
  width: 330rpx;
  height: 330rpx;
  overflow: hidden;
  border-radius: 20rpx;
  position: relative;
}
.plays-list .plays-list-item .plays-cover image {
  width: 100%;
  height: 100%;
}
.plays-list .plays-list-item .plays-cover .cover_point {
  position: absolute;
  right: -5rpx;
  bottom: 0;
  background: #9000ff;
  color: #fff;
  width: 83rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight:600;
}
.plays-list .plays-list-item .plays-title{
  font-size: 34rpx;
  font-weight: bold;
  height: 72rpx;
  line-height: 72rpx;
}
.plays-list .plays-list-item .people_num {
  font-size: 28rpx;
  color: #8a8a8a;
  font-weight: bold;
}
.push-list{
  width: 100%;
  margin-bottom: 50rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
  color: #e1e1e1;
}