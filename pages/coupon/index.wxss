/* pages/coupon/index.wxss */
.coupin-item{
  width: 100%;
  height: 240rpx;
  margin-top: 34rpx;
  position: relative;
}
.coupin-item image{
  width: 690rpx;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}
.coupin-item .content{
  position: absolute;
  left: 0;
  top:0;
  width: 100%;
  height: 100%;
}
.coupon-left{
  color: #5B39E7;
  width: 306rpx;
  height: 100%;
  text-align: center;
  line-height: 240rpx;
  font-size: 28rpx;
  font-weight: 600;
  float: left;
}
.coupon-left .price{
  font-size: 90rpx;
}
.coupon-right{
  float: left;
  width: 350rpx;
  height: 100%;
  padding-left: 47rpx;
}
.coupon-right .title{
  font-size: 30rpx;
  color: #5B39E7;
  height: 100rpx;
  line-height: 100rpx
}
.coupon-right .txt{
  width: 328rpx;
  font-size: 24rpx;
  color: #797878;
  margin-bottom: 20rpx;
}

.coupon-right .time{
  font-size: 24rpx;
  color: #403F3F;
}