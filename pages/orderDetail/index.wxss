/* pages/playsDetail/index.wxss */
page {
  background-color: #f0f2f7;
}

/* addSeekTop */

.addSeekTop {
  width: 100%;
  padding: 22rpx 30rpx 0;
  background: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.addSeekTop .addSeekTop_img {
  width: 678rpx;
  height: 206rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.addSeekTop_img image {
  width: 100%;
  height: 100%;
}

.addSeekTop .addSeekTop_title {
  font-size: 31rpx;
  color: #333;
  height: 60rpx;
}

.addSeekTop_title text {
  font-size: 23rpx;
  background: #00b90d;
  color: #fff;
  padding: 6rpx 18rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.addSeekTop .addSeekTop_score {
  color: #333;
  font-size: 24rpx;
  font-family: FZLTZHK--GBK1-0;
  font-weight: 600;
}

.addSeekTop_score text:first-child {
  color: #ff7302;
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.addSeekTop_score text:first-child text {
  font-size: 23rpx;
}

.addSeekTop_bottom {
  height: 106rpx;
  line-height: 106rpx;
}

.addSeekTop_bottom .addSeekTop_bottom_left,
.addSeekTop_bottom .addSeekTop_bottom_right {
  font-size: 30rpx;
  float: left;
}

.addSeekTop_bottom .addSeekTop_bottom_right {
  margin-left: 150rpx;
}

.addSeekTop_bottom_left view:first-child,
.addSeekTop_bottom_right view:first-child {
  float: left;
  margin-right: 18rpx;
}

.addSeekTop_bottom_left .addSeekTop_bottom_starImg,
.addSeekTop_bottom_right .addSeekTop_bottom_starImg {
  width: 26rpx;
  height: 26rpx;
  float: left;
  margin-left: 4rpx;
}

.addSeekTop_bottom_starImg image {
  width: 100%;
  height: 100%;
}

.reservationDetails_address {
  width: 100%;
  height:124rpx;
  background: #fff;
  line-height: 124rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.reservationDetails_address view:first-child {
  width: 5rpx;
  height: 24rpx;
  border-radius: 3rpx;
  background: rgba(172, 124, 253, 1);
  float: left;
  margin-top:50rpx;
}

.reservationDetails_address view{
  float: left;
  font-size: 30rpx;
  font-family: FZLTXHK--GBK1-0;
  font-weight: 200;
  color: rgba(0, 0, 0, 1);
  margin-left:16rpx;
}
