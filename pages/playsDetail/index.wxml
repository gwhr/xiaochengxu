<!-- subscribe_Top -->
<view class="subscribe_Top" style="background-image:url( {{info.thumb}})">
  <view class="subscribe_Top_Btn">
    <view>
      {{info.downpayment}}元预约（全款{{info.price}}元）
      <view class="subscribe_Top_img">
        <image src="../../images/rigth-arrow.png"></image>
