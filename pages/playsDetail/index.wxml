<cu-custom wx:if="{{isShow}}" style="position:fixed;z-index:99" bgColor="bg-purple-gradual" isBack="{{true}}">
  <view slot="content">剧本详情</view>
</cu-custom>
<view class="addSeekButton" bindtap='toOrder'>
  <view class="addSeekButton_btn">立即预约</view>
</view>
